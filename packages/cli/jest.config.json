{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>"],
  "testMatch": ["**/__tests__/**/*.test.ts", "**/?(*.)+(spec|test).ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.ts", "!**/*.d.ts"],
  "moduleNameMapper": {
    "^@codeguide/core$": "<rootDir>/../core/dist",
    "^@codeguide/(.*)$": "<rootDir>/../core/dist/$1"
  }
}
